{

  "manifest_version": 2,
  "name": "Blocker",
  "version": "1.0",

  "description": "Blocks distracting websites",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Blocker",
    "default_popup": "popup/widget.html"
  },



  "web_accessible_resources": [
    "icons/border-48.png",
    "icons/border-48.png",
    "icons/border-48.png"
  ]

}
